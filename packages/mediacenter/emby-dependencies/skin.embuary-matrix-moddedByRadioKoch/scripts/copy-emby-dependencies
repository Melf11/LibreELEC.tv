#!/bin/sh

KODI_ROOT=$HOME/.kodi

# May not exist if testing a clean /storage/.kodi without rebooting
mkdir -p $KODI_ROOT/addons
cp -r /usr/share/kodi/addons/script.skinshortcuts $KODI_ROOT/addons
cp -r /usr/share/kodi/addons/skin.embuary-matrix-moddedByRadioKoch $KODI_ROOT/addons

# copy splashscreen
mount -o remount,rw /flash
cp /usr/share/kodi/media/splash-2160.png  /flash/oemsplash.png
mount -o remount,ro /flash

# copy userdata
mkdir -p $KODI_ROOT/userdata
cp -r /usr/share/kodi/userdata/addon_data $KODI_ROOT/userdata

# copy settings
cp /usr/share/kodi/system/advancedsettings.xml $KODI_ROOT/userdata/advancedsettings.xml

# enable waitfornetwork
mkdir -p /storage/.cache/libreelec/
cat << EOL > /storage/.cache/libreelec/network_wait
WAIT_NETWORK="true"
WAIT_NETWORK_TIME="10"
EOL
